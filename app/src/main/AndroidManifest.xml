<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.braziltube">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:name="com.app.braziltube.activities.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6340811997992634~9757639128" />

        <meta-data
            android:name="applovin.sdk.key"
            android:value="@string/applovin_sdk_key" />

        <activity
            android:name="com.app.braziltube.activities.ActivitySplash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.app.braziltube.activities.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.app.braziltube.activities.ActivityChannelDetailOffline"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivityChannelDetail"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivityNotificationDetail"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivityCategoryDetail"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivitySearch"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivityStreamPlayer"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivityYoutubePlayer"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivityPrivacyPolicy"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivityWebView"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name="com.app.braziltube.activities.ActivityRedirect"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service
            android:name="com.app.braziltube.notification.MyFirebaseMessageService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_onesignal_default" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <meta-data
            android:name="com.onesignal.NotificationServiceExtension"
            android:value="com.app.thestream.notification.NotificationServiceExtension" />

        <meta-data
            android:name="com.onesignal.NotificationOpened.DEFAULT"
            android:value="DISABLE" />

    </application>

</manifest>